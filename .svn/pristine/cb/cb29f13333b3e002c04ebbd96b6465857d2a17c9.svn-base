
body,html{
    width:100%;
    height:100%;
    font-family: PingFangSC-Medium;
    background: #ffd75b;
}
.content{
    width:100%;
    height:100%;
    position: relative;
    background:url('../imgs/body.png') no-repeat top center;
    background-size:100%;
    margin-top: -50px;
}

.message{
    width:100%;
    height:100%;
    position: relative;
}

.bottom{
    position: absolute;
    left:40px;
    top:525px;
    width:2.8rem;
    height:.35rem; 
    background:rgba(244,44,73,1);
    border-radius: 1rem ; 
    text-align: center;
    line-height: .35rem;
}

.head{
    position: absolute;
    left:36.5px;
    top:105px;
    text-align: center;
    font-size: .16rem;
    color: #fff;
}


.head p{
    margin-bottom: 4px;
}

.friend span,.recommend span{
    display: inline-block;
    vertical-align: 0px;
}

.recommend span{
    color: #F8E71C;
}

.download{
    font-size: .11rem;
}


.head img{
    width:.6rem;
    height: .6rem;
    display: block;
    margin: 0 auto;

}


.bottom p a{
    display: block;
    font-size: .15rem;
    color: #fff;
        /* padding: 10px; */
     margin-bottom: 10px;
}

.center{
    position: absolute;
    left:99px;
    top:280px;
}

.center p{
    text-align: center;
    line-height:.22rem;
    font-size: .12rem;
}

.center p:first-child{
    letter-spacing:0.01px;
    width: 1.6rem;
    /* height: .54rem; */
    color: #F42C49;
    margin-bottom: 5px;
    font-size: .16rem;
    
}

.center p:nth-child(2),.center p:nth-child(3),.center p:nth-child(4){
    text-align: center;
    letter-spacing:0.01px;
    color: #1E2617;
    font-size: .13rem;
}

.center p:last-child{
    color:#F42C49;
    font-size: .16rem;
    margin-top: 5px;
}
